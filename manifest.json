{
    "name": "Glassdoor Unlocked",
    "version": "1.0.0",
    "description": "Use Glassdoor without creating an account",
    "manifest_version": 3,
    "author": "Ifeanyi Obinelo",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Glassdoor Unlocked",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.glassdoor.com/*",
                "https://www.glassdoor.co.uk/*",
                "https://www.glassdoor.ca/*"
            ],
            "js": ["scripts/content.js"]
        }
    ]
}